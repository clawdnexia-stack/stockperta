# Copie ce fichier en .env à côté du docker-compose.yml
# cp .env.docker.example .env

POSTGRES_USER=stockatelier
POSTGRES_PASSWORD=stockatelier
POSTGRES_DB=stockatelier
JWT_SECRET=change-this-with-a-long-random-secret

# Images publiées depuis GitHub Container Registry (GHCR)
BACKEND_IMAGE=ghcr.io/clawdnexia-stack/stockatelier-backend:latest
FRONTEND_IMAGE=ghcr.io/clawdnexia-stack/stockatelier-frontend:latest

# Nom du réseau Docker auquel Traefik est connecté.
# Local (stack autonome) : laisse stockatelier_public
# VPS (Traefik déjà existant) : mets ici le réseau existant (ex: proxy, traefik, web)
TRAEFIK_NETWORK=stockatelier_public

# Garde 80 pour http://stockperta.duckdns.org (sans port)
# Si le port 80 est déjà occupé sur la machine, mets 8081 temporairement.
TRAEFIK_HTTP_PORT=80
